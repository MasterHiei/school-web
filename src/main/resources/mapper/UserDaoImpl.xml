<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.school.dao.UserDao">

    <!-- 添加用户 -->
    <insert id="insertUser" parameterType="com.school.entity.UserEntity">
        insert into tbl_user values(#{tuName},#{tuPwd},#{tuAddress},#{tuDate},#{tiId},#{tuDetail},#{deleteFlg})
    </insert>

    <!-- 删除用户 -->
    <update id="deleteUser" parameterType="com.school.entity.UserEntity">
        update tbl_user set DELETE_FLG=#{deleteFlg} where TU_ID=#{tuId}
    </update>

    <!-- 修改用户 -->
    <update id="updateUser" parameterType="com.school.entity.UserEntity" >
        update tbl_user set TU_NAME=#{tuName},TU_PWD=#{tuPwd},TU_ADDRESS=#{tuAddress},TU_DETAIL=#{tuDetail} where TU_ID=#{tuId}
    </update>

    <!-- 查询单个用户 -->
    <select id="selectOneUser" parameterType="java.lang.Long" resultType="com.school.entity.UserEntity">
        select * from tbl_user where TU_ID=#{tuId}
    </select>
    <resultMap type="com.school.entity.UserEntity" id="user">
        <id column="TU_ID" property="tuId" />
        <result column="TU_NAME" property="tuName"/>
        <result column="TU_PWD" property="tuPwd"/>
        <result column="TU_ADDRESS" property="tuAddress" />
        <result column="TU_DATE" property="tuDate" />
        <result column="TI_ID" property="tiId"/>
        <result column="TU_DETAIL" property="tuDetail"/>
        <result column="DELETE_FLG" property="deleteFlg"/>
    </resultMap>

    <!-- 查询全部用户数量 -->
    <select id="selectUserCount" resultType="java.lang.Integer">
        select count(*) from tbl_user
    </select>

</mapper>